@model Tes.Models.Product

<div class="container mt-5">
    <h1>Edit Product</h1>
    <form method="post" action="/Product/Edit">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="mb-3">
            <label for="Name" class="form-label">Product Name</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required>
        </div>
        <div class="mb-3">
            <label for="Price" class="form-label">Price</label>
            <input type="number" step="0.01" class="form-control" id="Price" name="Price" value="@Model.Price" required>
        </div>
        <button type="submit" class="btn btn-success">Update</button>
        <a href="/Product" class="btn btn-secondary">Cancel</a>
    </form>
</div>


